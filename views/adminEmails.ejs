<!-- views/adminEmails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Admin Emails</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
            background-color: #f5f5f5;
        }
        .container {
            max-width: 800px;
            margin: auto;
            background-color: #fff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }
        h1 {
            text-align: center;
            color: #333;
        }
        .message {
            padding: 10px;
            margin-bottom: 20px;
            border-radius: 4px;
        }
        .message.success {
            background-color: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }
        .message.error {
            background-color: #f8d7da;
            color: #721c24;
            border: 1px solid #f5c6cb;
        }
        ul {
            list-style-type: none;
            padding: 0;
        }
        li {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }
        input[type="email"] {
            flex-grow: 1;
            padding: 5px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        button {
            padding: 6px 12px;
            margin-left: 5px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }
        .btn-update {
            background-color: #007bff;
            color: white;
        }
        .btn-delete {
            background-color: #dc3545;
            color: white;
        }
        .btn-add {
            background-color: #28a745;
            color: white;
            margin-top: 15px;
        }
        .btn-cancel {
             background-color: #6c757d;
             color: white;
        }
        .form-inline {
            display: flex;
            margin-top: 10px;
        }
        .form-inline input {
            flex-grow: 1;
            padding: 8px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }

        /* Basic styles for edit mode */
        .edit-input {
            flex-grow: 1;
            padding: 5px;
            margin-right: 10px;
            border: 1px solid #ccc;
            border-radius: 3px;
        }
        .edit-actions {
            display: flex;
            align-items: center;
        }
        .edit-actions button {
            margin-left: 5px;
        }
        .view-email {
            flex-grow: 1;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Manage Admin Emails</h1>

        <% if (locals.message) { %>
            <div class="message success"><%= message %></div>
        <% } %>
        <% if (locals.error) { %>
            <div class="message error"><%= error %></div>
        <% } %>

        <form id="emailsForm" action="/adminEmails/update" method="POST">
            <ul id="emailList">
                <% if (adminEmails && adminEmails.length > 0) { %>
                    <% adminEmails.forEach(function(email, index) { %>
                        <li class="email-item" data-index="<%= index %>">
                            <span class="view-email"><%= email %></span>
                            <div class="edit-actions" style="display:none;">
                                <input type="email" class="edit-input" name="emails[<%= index %>]" value="<%= email %>" required>
                                <button type="button" class="btn-update save-edit">Save</button>
                                <button type="button" class="btn-cancel cancel-edit">Cancel</button>
                            </div>
                            <button type="button" class="btn-update edit-email">Edit</button>
                            <button type="submit" class="btn-delete" formaction="/adminEmails/delete/<%= index %>" onclick="return confirm('Are you sure you want to delete this email?')">Delete</button>
                        </li>
                    <% }); %>
                <% } else { %>
                    <li>No admin emails configured.</li>
                <% } %>
            </ul>
        </form>

        <form class="form-inline" action="/adminEmails/add" method="POST">
            <input type="email" name="newEmail" placeholder="Enter new admin email" required>
            <button type="submit" class="btn-add">Add Email</button>
        </form>

        <a href="/orderAdmin" style="display: inline-block; margin-top: 20px;">Back to Admin Panel</a>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const emailItems = document.querySelectorAll('.email-item');

            emailItems.forEach(item => {
                const editButton = item.querySelector('.edit-email');
                const viewSpan = item.querySelector('.view-email');
                const editActions = item.querySelector('.edit-actions');
                const editInput = item.querySelector('.edit-input');
                const saveButton = item.querySelector('.save-edit');
                const cancelButton = item.querySelector('.cancel-edit');

                editButton.addEventListener('click', function() {
                    viewSpan.style.display = 'none';
                    editButton.style.display = 'none';
                    editActions.style.display = 'flex';
                    editInput.focus();
                });

                cancelButton.addEventListener('click', function() {
                     // Reset input value to original
                     editInput.value = viewSpan.textContent;
                     viewSpan.style.display = 'block';
                     editButton.style.display = 'inline-block';
                     editActions.style.display = 'none';
                });

                saveButton.addEventListener('click', function() {
                    // The form submission will handle the update
                    // We just need to submit the main form with the updated value
                    // Find the hidden input for this index and update its value
                    const index = item.dataset.index;
                    const form = document.getElementById('emailsForm');
                    // Submit the form for update
                    form.submit(); // This will submit to the default action, which is /adminEmails/update
                                   // We need to ensure the correct input value is sent.
                                   // Actually, it's simpler to let the form submission handle it based on the input's current value.
                                   // The input name is emails[<index>], so the server will get the updated value.
                });

                // Also allow saving by pressing Enter in the input field
                editInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        saveButton.click();
                    }
                });
            });
        });
    </script>
</body>
</html>